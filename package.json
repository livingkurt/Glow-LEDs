    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^5.1.0"
  },
  "scripts": {
    "start": "npm run env-check && npm run start:prod || npm run start:dev",
    "env-check": "cross-env NODE_ENV=production",
    "start:prod": "node --max_old_space_size=2560 dist/server.js",
    "start:dev": "concurrently \"npm:server-dev\" \"npm:client\"",
    "transpile-watch": "babel server --out-dir dist --ignore node_modules --watch",
    "server-dev": "nodemon --max_old_space_size=2560 dist/server.js",
    "client": "cd client && npm start",
    "build": "babel server --out-dir dist",
    "heroku-postbuild": "npm run build",
    "install": "cd client && npm install --legacy-peer-deps",
    "build:client": "cd client && npm run build",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint 'client/src/**/*.{js,jsx}' --cache",
    "lint:scss": "stylelint 'client/src/**/*.scss' --cache",
    "sitemap": "cd client && npm run generate-sitemap",
    "lint-staged": "$(npm bin)/lint-staged",
    "lint:fix": "npm run lint:js:fix && npm run lint:scss:fix",
    "lint:js:fix": "npm run lint:js --fix",
    "lint:scss:fix": "npm run lint:scss --fix",
    "stylelint-check": "stylelint-config-prettier-check"
  },
  "lint-staged": {
    "client/src/**/*.jsx": [
      "eslint --fix --cache"
    ],
    "client/src/scss/**/*.scss": [
      "stylelint --fix --cache"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "./server/scripts/hooks/pre-commit.sh"
    }
  }
}
